<view data-weui-theme="{{theme}}">
  <button class="avatar-wrapper shadow-lg" open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar">
    <image class="avatar border border-gray-300 border-solid" src="{{$state.userInfo.avatar_url}}"></image>
  </button>
  <mp-form>
    <mp-cells>
      <mp-cell title="昵称">
        <input bindconfirm="onChangeNickname" bindinput="onChangeNickname" value="{{$state.userInfo.nickname}}" type="nickname" class="weui-input" placeholder="请输入昵称" />
      </mp-cell>
      <mp-cell title="联系作者">
        <text class="text-gray-400">yjw999wow@163.com</text>
      </mp-cell>
      <mp-cell title="版本">
        <text class="text-gray-400">Ver 0.1.0</text>
      </mp-cell>
    </mp-cells>
  </mp-form>
</view>