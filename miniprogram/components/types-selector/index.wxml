<!--components/types-selector/index.wxml-->
<scroll-view scroll-y="{{ true }}" style="height: {{ height }}rpx;">
  <view class="grid grid-cols-6 gap-1 text-xs ">
    <view catchtap="handleSelectType" data-item="{{item}}" wx:for="{{types}}" wx:key="id" class="{{ item.id === value? 'bg-green-600 text-white':'bg-gray-200 text-dark-200' }} rounded text-center py-2" style="color: {{ item.id === value?color:'' }}; background-color: {{ item.id === value?bgColor:'' }};">
      {{ item.name }}
    </view>
  </view>
</scroll-view>